---
import type Faq from '../types/faq';


export interface Props {
  faqs: Faq[];
}

const { faqs } = Astro.props;
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-16">Frequently Asked Questions</h2>
    <div class="max-w-3xl mx-auto">
      {faqs.map((faq, index) => (
        <div class="mb-6">
          <details class="bg-white rounded-lg shadow-md overflow-hidden">
            <summary class="px-6 py-4 cursor-pointer font-semibold flex items-center justify-between">
              {faq.title}
              <svg class="w-6 h-6 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <p class="px-6 py-4 text-gray-600">
              {faq.description}
            </p>
          </details>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  details > summary::-webkit-details-marker {
    display: none;
  }
  details[open] > summary svg {
    transform: rotate(180deg);
  }
</style>