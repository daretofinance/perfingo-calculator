---
import Layout from '../layouts/Layout.astro';
import CalculatorCard from '../components/CalculatorCard.astro';

const calculators = [
  { name: 'Income Tax Calculator', description: 'Calculate your tax payable based on your annual income.', url: '/calculators/income-tax' },
  { name: 'HDB Loan Eligibility Calculator', description: 'Find out your eligibility for HDB loans.', url: '/calculators/hdb-loan' },
  { name: 'CPF Contribution Calculator', description: 'Calculate your CPF contributions.', url: '/calculators/cpf-contribution' },
  { name: 'Retirement Savings Calculator', description: 'Plan for your retirement with our savings calculator.', url: '/calculators/retirement-savings' },
  { name: 'Investment Returns Calculator', description: 'Estimate your investment returns over time.', url: '/calculators/investment-returns' },
  { name: 'Mortgage Calculator', description: 'Calculate your monthly mortgage payments.', url: '/calculators/mortgage' },
  { name: 'Car Loan Calculator', description: 'Estimate your monthly car loan payments.', url: '/calculators/car-loan' },
  { name: 'Education Savings Calculator', description: 'Save for your children\'s education.', url: '/calculators/education-savings' },
  { name: 'Cost of Living Calculator', description: 'Compare the cost of living in different cities.', url: '/calculators/cost-of-living' },
  { name: 'Budget Planner', description: 'Create your monthly budget easily.', url: '/calculators/budget-planner' },
];
---

<Layout>
  <section id="hero" class="bg-primary-500 text-white py-20">
    <div class="container mx-auto text-center">
      <h1 class="text-4xl font-display font-bold">Welcome to Perfingo's Financial Calculators</h1>
      <p class="mt-4 text-lg">Empowering you with tools to make smart financial decisions.</p>
      <a href="#calculators" class="mt-8 inline-block bg-white text-primary-500 py-2 px-4 rounded-full font-semibold hover:bg-neutral-100">Explore Calculators</a>
    </div>
  </section>

  <section id="calculators" class="py-20 bg-neutral-200">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-display font-bold mb-10">Our Financial Calculators</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        {calculators.map(calculator => (
          <CalculatorCard name={calculator.name} description={calculator.description} url={calculator.url} />
        ))}
      </div>
    </div>
  </section>

  <section id="about" class="py-20">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-display font-bold mb-4">About Perfingo</h2>
      <p class="max-w-2xl mx-auto text-lg">At Perfingo, we are dedicated to providing the best financial planning tools to help you achieve your financial goals. Our calculators are designed to be user-friendly and provide accurate results to aid in your financial decision-making.</p>
    </div>
  </section>

  <section id="contact" class="bg-neutral-300 py-20">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-display font-bold mb-4">Contact Us</h2>
      <p class="text-lg mb-8">If you have any questions or need further assistance, please feel free to reach out to us.</p>
      <a href="/contact" class="inline-block bg-primary-500 text-white py-2 px-4 rounded-full font-semibold hover:bg-primary-600">Get in Touch</a>
    </div>
  </section>
</Layout>
